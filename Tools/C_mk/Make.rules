$(objTempDir)/%.o: %.F
	@echo Compiling $*.F ...
	@if [ ! -d $(f77TempDir) ]; then mkdir -p $(f77TempDir); fi
	@if [ ! -d $(objTempDir) ]; then mkdir -p $(objTempDir); fi
	$(SILENT) $(FORT_CPP) $(CPPFLAGS) -DBL_LANG_FORT $< | $(FORTPREP) > $(f77TempDir)/$*.f
	$(SILENT) $(F90CACHE) $(FC) $(FLIBFLAGS) $(FFLAGS) $(fincludes) -c $(f77TempDir)/$*.f $(FORT_LIB_OUTPUT_OPTION)

$(objTempDir)/%.o: %.f90
	@echo Compiling $*.f90 ...
	@if [ ! -d $(objTempDir) ]; then mkdir -p $(objTempDir); fi
	$(SILENT) $(F90CACHE) $(fC) $(fLIBFLAGS) $(fFLAGS) $(fincludes) -c $< $(FORT_LIB_OUTPUT_OPTION)

$(objTempDir)/%.o: %.f
	@echo Compiling $*.f ...
	@if [ ! -d $(objTempDir) ]; then mkdir -p $(objTempDir); fi
	$(SILENT) $(F90CACHE) $(fC) $(fLIBFLAGS) $(fFLAGS) $(fincludes) -c $< $(FORT_LIB_OUTPUT_OPTION)
#
# Rules for objects.
#
$(objEXETempDir)/%.o: %.cpp
	@echo Compiling $*.cpp ...
	@if [ ! -d $(objEXETempDir) ]; then mkdir -p $(objEXETempDir); fi
	$(SILENT) $(CCACHE) $(CXX) $(CXXFLAGS) $(CPPFLAGS) -c $(CXXEXEFLAGS) $< $(EXE_OUTPUT_OPTION)

$(objEXETempDir)/%.o: %.c
	@echo Compiling $*.c ...
	@if [ ! -d $(objEXETempDir) ]; then mkdir -p $(objEXETempDir); fi
	$(SILENT) $(CCACHE) $(CC) $(CFLAGS) $(CPPFLAGS) -c $(CEXEFLAGS) -DBL_LANG_C $< $(EXE_OUTPUT_OPTION)

pF90EXE_sources := $(addprefix $(f77TempDir)/, $(F90EXE_sources:.F90=.f90))

$(f77TempDir)/%.f90: %.F90
	@echo preprocessing $*.F90 ...
	@if [ ! -d $(f77TempDir) ]; then mkdir -p $(f77TempDir); fi
	$(SILENT) $(FORT_CPP) -DBL_LANG_FORT $(CPPFLAGS) $< | $(F90PREP) > $(f77TempDir)/$*.f90

$(objEXETempDir)/%.o: %.F
	@echo Compiling $*.F ...
	@if [ ! -d $(objEXETempDir) ]; then mkdir -p $(objEXETempDir); fi
	@if [ ! -d $(f77TempDir) ]; then mkdir -p $(f77TempDir); fi
	$(SILENT) $(FORT_CPP) -DBL_LANG_FORT $(CPPFLAGS) $< | $(FORTPREP) > $(f77TempDir)/$*.f
	$(SILENT) $(F90CACHE) $(FC) $(FFLAGS) $(fincludes) -c $(FEXEFLAGS) $(f77TempDir)/$*.f $(FORT_EXE_OUTPUT_OPTION)

VPATH := $(VPATH) $(f77TempDir)
$(objEXETempDir)/%.o: %.f90
	@echo Compiling $*.f90 ...
	@if [ ! -d $(objEXETempDir) ]; then mkdir -p $(objEXETempDir); fi
	$(SILENT) $(F90CACHE) $(F90) $(F90FLAGS) $(fFLAGS) $(fincludes) -c $(fEXEFLAGS) $< $(FORT_EXE_OUTPUT_OPTION)

$(objEXETempDir)/%.o: %.f
	@echo Compiling $*.f ...
	@if [ ! -d $(objEXETempDir) ]; then mkdir -p $(objEXETempDir); fi
	$(SILENT) $(F90CACHE) $(fC) $(fFLAGS) $(fincludes) -c $(fEXEFLAGS) $< $(FORT_EXE_OUTPUT_OPTION)
#
# Rules for dependencies in libraries.
#
$(depTempDir)/%.d: %.cpp
	@echo Depending $< ...
	@if [ ! -d $(depTempDir) ]; then mkdir -p $(depTempDir); fi
	@$(SHELL) -ec '$(MKDEP) $(includes) $< | \
		sed -e '\''s,^[^:]*\/,,'\'' | \
		sed -e '\''s,$*.o,$(optionsLib)(&) $@,'\'' > $@'

