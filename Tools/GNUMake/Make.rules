	$(SILENT) $(RM) $(f77EXETempDir)/*.f $(f77EXETempDir)/*.f90 $(objEXETempDir)/*.o
	$(SILENT) $(RM) $(f77EXETempDir)/*.f $(f77EXETempDir)/*.f90 $(objEXETempDir)/*.o
	$(SILENT) $(RM) $(tmpEXETempDir)/*
	$(SILENT) $(RM) *.optrpt $(objEXETempDir)/*.optrpt
	$(SILENT) $(RM) $(executable)
	$(SILENT) $(RM) -r $(executable).dSYM

