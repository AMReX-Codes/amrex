vpath %.f    $(FINAL_VPATH_LOCATIONS)
vpath %.fi   $(FINAL_VPATH_LOCATIONS)
vpath %.F    $(FINAL_VPATH_LOCATIONS)
vpath %.f90  $(FINAL_VPATH_LOCATIONS)
vpath %.F90  $(FINAL_VPATH_LOCATIONS)
