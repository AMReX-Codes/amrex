    ifeq ($(HIP_SAVE_TEMPS),TRUE)
      # Issue: hipcc does not seem to respect the arg to --save-temps
      CXXFLAGS += --save-temps=$(objEXETempDir)
      ifeq ($(DEBUG),TRUE) # --save-temps does not like AMREX_GPU_EXTERNAL
        CPPFLAGS += -DNDEBUG
