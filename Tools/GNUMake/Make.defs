    ifeq ($(USE_MPI),TRUE)
      # Make sure that the C/C++ MPI
      # wrappers are calling hipcc to compile the code.
      # Right now we handle OpenMPI, MPICH, and HPE MPT.
      # Other MPI implementations could be added later.

      export OMPI_CC := $(CXX)
      export OMPI_CXX := $(CC)
