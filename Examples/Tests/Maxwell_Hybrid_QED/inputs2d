max_step = 500
amr.n_cell = 64 1024
amr.max_grid_size = 4096 
amr.blocking_factor = 8
amr.plot_int = 300
geometry.coord_sys   = 0
geometry.is_periodic = 1  1  1  
geometry.prob_lo     =  -32 -512  
geometry.prob_hi     =  32 512
amr.max_level = 0 
amr.plot_file = "./plt"
warpx.do_nodal = 1

#################################
############ NUMERICS ###########
#################################
warpx.verbose = 0
warpx.plot_raw_fields = 1
warpx.plot_raw_fields_guards = 1
warpx.plot_finepatch = 1
warpx.plot_crsepatch = 1
warpx.use_filter = 1
warpx.cfl = 1. 
warpx.do_pml = 0 
warpx.use_hybrid_QED = 1 

particles.nspecies = 0

#################################
############ FIELDS #############
#################################

warpx.E_ext_grid_init_style = parse_E_ext_grid_function
warpx.Ez_external_grid_function(x,y,z) = 0.
warpx.Ex_external_grid_function(x,y,z) = 0.
warpx.Ey_external_grid_function(x,y,z) = ((exp(-(z)**2/20000)))*cos(2*3.14159265359*z/64)+1.e5

warpx.B_ext_grid_init_style = parse_B_ext_grid_function
warpx.Bx_external_grid_function(x,y,z)= -1*sqrt((1+(12*10**(-13))/(8.8541878128*10**(-12)))/(1+(4*10**(-13))/(8.8541878128*10**(-12))))*(exp(-(z)**2/20000))*cos(2*3.14159265359*z/64)/299792458.
warpx.By_external_grid_function(x,y,z)= 0.
warpx.Bz_external_grid_function(x,y,z) = 0.
