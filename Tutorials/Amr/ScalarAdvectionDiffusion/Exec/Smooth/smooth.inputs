# ------------------  INPUTS TO MAIN PROGRAM  -------------------
max_step = 1000000
max_step = 10

stop_time = 7.0

# PROBLEM SIZE & GEOMETRY
geometry.is_periodic =  1  1  1
geometry.coord_sys   =  0       # 0 => cart
geometry.prob_lo     =  0. 0. 0.
geometry.prob_hi     =  1.0  1.0  1.0
amr.n_cell           =  64   64   64
adv.diffusion_coeff = 0.000  # diffusion coefficient

# TIME STEP CONTROL
adv.cfl            = 0.1     # cfl number for hyperbolic system

# VERBOSITY
adv.v              = 1       # verbosity in Adv
amr.v              = 1       # verbosity in Amr

#amr.grid_log         = grdlog  # name of grid logging file

#this can be godunov, rk2, rk3, rk4
adv.algorithm = "rk4"
adv.use_limiting = true
adv.do_reflux= 1
adv.use_fixed_dt = false

#adv.fixed_dt = 0.0002
# REFINEMENT / REGRIDDING
amr.max_level       = 1       # maximum level number allowed
amr.ref_ratio       = 2 2 2 2 # refinement ratio
amr.regrid_int      = 2000000 # how often to regrid
amr.blocking_factor = 8       # block factor in grid generation
amr.max_grid_size   = 16
tag_domain_middle = 1
# CHECKPOINT FILES
amr.checkpoint_files_output = 0     # 0 will disable checkpoint files
amr.check_file              = chk   # root name of checkpoint file
amr.check_int               = 10    # number of timesteps between checkpoints

# PLOTFILES
amr.plot_files_output = 1      # 0 will disable plot files
amr.plot_file         = plt    # root name of plot file
amr.plot_int          = 100000   # number of timesteps between plot files

# PROBIN FILENAME
amr.probin_file = probin

# TRACER PARTICLES
adv.do_tracers = 0
amrex.fpe_trap_invalid=1 

truncation_error_stage = 2
